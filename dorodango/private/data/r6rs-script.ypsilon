#!/bin/sh

export YPSILON_SITELIB="@R6RS_LIBRARY_PATH@"
dir=`echo "$R6RS_LIBRARY_PATH" | sed -e 's/^\([^:]*\)/\1/'`
export YPSILON_ACC="$HOME/.cache/ypsilon/$dir"
mkdir -p "$YPSILON_ACC"

while true; do
    case "$1" in
        --compile)
            shift # no-op on ypsilon, compilation is on-demand
            ;;
        --)
            shift
            break
            ;;
        *)
            break
            ;;
    esac
done

exec ypsilon --r6rs -- "$@"
